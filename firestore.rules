rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    match /socialLinks/{linkId} {
      allow read: if true;
      allow write: if request.auth != null;
    }

    match /subscriptionPlans/{planId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }
    
    match /conditions/{conditionId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    match /treatmentGuides/{guideId} {
      allow get, list: if true;
      allow write: if request.auth != null;
    }

    match /contactFormSubmissions/{contactFormSubmissionId} {
      allow create: if true;
      allow get, list, delete: if request.auth != null;
      allow update: if false;
    }

    match /feedback/{feedbackId} {
      allow create: if true;
      allow get, list, delete: if request.auth != null;
      allow update: if false;
    }

    match /therapists/{therapistId} {
      allow get, list: if true;
      allow write: if request.auth != null;

      match /appointments/{appointmentId} {
          allow create: if true;
          allow get, list, update, delete: if request.auth != null;
      }
      
      match /availability/{date} {
          allow read: if true;
          allow write: if request.auth != null;
      }
    }

    match /users/{userId} {
        allow get, write: if request.auth != null && request.auth.uid == userId;
        allow list: if false; 

        match /subscriptions/{subscriptionId} {
            allow get: if request.auth != null && request.auth.uid == userId;
            allow create: if request.auth != null && request.auth.uid == userId;
            allow update, delete: if request.auth != null;
            allow list: if request.auth != null && request.auth.uid == userId; 
        }
    }

    match /{path=**}/subscriptions/{subscriptionId} {
        allow list: if request.auth != null;
    }

    // The admins collection is no longer used for rules and should not be client-accessible.
    match /admins/{userId} {
      allow read, write: if false;
    }
  }
}

    
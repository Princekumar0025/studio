rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Publicly readable collections, manageable by admins
    match /subscriptionPlans/{planId} {
      allow get, list: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /products/{productId} {
      allow get, list: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }
    
    match /conditions/{conditionId} {
      allow get, list: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    match /treatmentGuides/{guideId} {
      allow get, list: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Contact Form: Writable by anyone, readable by authenticated users, deletable by admins.
    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow get, list: if request.auth != null;
      allow update: if false;
      allow delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
    }

    // Therapists collection and subcollections
    match /therapists/{therapistId} {
      // Therapist documents are publicly readable, but only admins can modify them.
      allow get, list: if true;
      allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));

      // Appointments can be created by anyone, but only viewed/managed by authenticated users/admins
      match /appointments/{appointmentId} {
          allow create: if true;
          allow get, list: if request.auth != null;
          allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      }
      
      // Availability is public to read, but only admins can change it.
      match /availability/{date} {
          allow read: if true;
          allow write: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
      }
    }

    // User-specific data
    match /users/{userId} {
        // A user can get their own doc, but not list other user docs.
        allow get, write: if request.auth != null && request.auth.uid == userId;
        allow list: if false; // Prevents listing all user docs

        match /subscriptions/{subscriptionId} {
            allow get: if request.auth != null && (request.auth.uid == userId || exists(/databases/$(database)/documents/admins/$(request.auth.uid)));
            allow create: if request.auth != null && request.auth.uid == userId;
            allow update, delete: if request.auth != null && exists(/databases/$(database)/documents/admins/$(request.auth.uid));
            allow list: if false; // Only allow listing through collection group query below
        }
    }

    // Admin collection group query for all subscriptions.
    match /{path=**}/subscriptions/{subscriptionId} {
        allow list: if request.auth != null;
    }

    // Admin UID list: Read-only from client
    match /admins/{userId} {
      allow read: if true; // `exists()` and `get()` in rules require this to be readable
      allow write: if false;
    }
  }
}

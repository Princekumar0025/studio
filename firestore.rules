rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    function isDeveloperAdmin() {
      return request.auth != null && request.auth.uid == 'nvZWlJOeBHdojcfXC9ODKMJwky12';
    }

    match /subscriptionPlans/{planId} {
      allow get, list: if true;
      allow write: if isDeveloperAdmin();
    }

    match /products/{productId} {
      allow get, list: if true;
      allow write: if isDeveloperAdmin();
    }
    
    match /conditions/{conditionId} {
      allow get, list: if true;
      allow write: if isDeveloperAdmin();
    }

    match /treatmentGuides/{guideId} {
      allow get, list: if true;
      allow write: if isDeveloperAdmin();
    }

    match /contactFormSubmissions/{submissionId} {
      allow create: if true;
      allow get, list, delete: if isDeveloperAdmin();
      allow update: if false;
    }

    match /therapists/{therapistId} {
      allow get, list: if true;
      allow write: if isDeveloperAdmin();

      match /appointments/{appointmentId} {
          allow create: if true;
          allow get, list, update, delete: if isDeveloperAdmin();
      }
      
      match /availability/{date} {
          allow read: if true;
          allow write: if isDeveloperAdmin();
      }
    }

    match /users/{userId} {
        allow get, write: if request.auth != null && request.auth.uid == userId;
        allow list: if false; 

        match /subscriptions/{subscriptionId} {
            allow get: if request.auth != null && (request.auth.uid == userId || isDeveloperAdmin());
            allow create: if request.auth != null && request.auth.uid == userId;
            allow update, delete: if isDeveloperAdmin();
            allow list: if false; 
        }
    }

    match /{path=**}/subscriptions/{subscriptionId} {
        allow list: if isDeveloperAdmin();
    }

    // The admins collection is no longer used for rules and should not be client-accessible.
    match /admins/{userId} {
      allow read, write: if false;
    }
  }
}
